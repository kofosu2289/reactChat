<%- include('templates/header'); %>

<div class="content-app">
	<div class="userpart">

		<center>
			<form id="formLogin" action="/users/login" method='POST' class="col-md-6	text-center border border-light p-5">
				<%- messages();  %>
				<div id="errorplace" class="alert alert-danger"></div>
				<h6 class="h4 mb-4">Login To Your Account</h6>
				<input type="username" value="<%= (!!locals.username)?username:'' %>" name="username" class="form-control mb-4"
				 placeholder="Username">
				<input type="password" value="<%= (!!locals.password)?password:'' %>" name="password" class="form-control mb-4"
				 placeholder="Password">
				<div class="d-flex justify-content-around">
					<div>
						<!-- Remember me -->
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
							<label class="custom-control-label" for="defaultLoginFormRemember">Remember Me</label>
						</div>
					</div>
					<div>
						<!-- Forgot password -->
						<a href="">Forgot Password?</a>
					</div>
				</div>
				<!-- Sign in button -->
				<button id="loginBtn" class="btn btn-info btn-block my-4" type="submit">Sign In</button>

				<!-- Register -->
				<p>Not A Member?
					<a href="./register">Register</a>
				</p>


			</form>

		</center>
	</div>

</div>

<%- include('templates/footer'); %>